---
import Github from "../icons/Github.astro";
import Linkedin from "../icons/Linkedin.astro";
import Mail from "../icons/Mail.astro";
---

<footer class="py-6 text-gray-300">
    <div class="container mx-auto px-4 flex flex-wrap justify-between items-center">
      <!-- Información del Autor -->
      <div class="w-full md:w-1/3 mb-4 md:mb-0 text-center md:text-left">
        <h2 class="text-2xl font-bold text-white">Manuel Jesús Alors Toledo</h2>
        <p class="text-sm">Desarrollador Web Junior</p>
      </div>
  
      <!-- Navegación -->
      <nav class="w-full md:w-1/3 flex flex-wrap justify-center md:justify-center mb-4 md:mb-0">
        <a href="#sobre-mi" class="px-3 py-2 text-sm hover:text-white">Sobre mí</a>
        <a href="#proyectos" class="px-3 py-2 text-sm hover:text-white">Proyectos</a>
        <a href="#top" class="px-3 py-2 text-sm hover:text-white">Inicio</a>
      </nav>
  
      <!-- Redes Sociales -->
      <div class="w-full md:w-1/3 flex justify-center md:justify-center">
        <a href="https://github.com/ManuelJesusAlorsToledo" target="_blank" class="mx-2 hover:text-white" aria-label="GitHub">
          <Github class="w-6 h-6 md:w-8 md:h-8" />
        </a>
        <a href="https://www.linkedin.com/in/manuel-jes%C3%BAs-alors-toledo/" target="_blank" class="mx-2 hover:text-white" aria-label="LinkedIn">
          <Linkedin class="w-6 h-6 md:w-8 md:h-8" />
        </a>
        <a href="mailto:example@example.com" class="mx-2 hover:text-white" aria-label="Correo electrónico">
          <Mail class="w-6 h-6 md:w-8 md:h-8" />
        </a>
      </div>
    </div>
  
    <!-- Información de Copyright -->
    <div class="container mx-auto px-4 mt-4 text-center text-xs">
      <p>&copy; 2024 Manuel Jesús Alors Toledo. Página creada con Astro.</p>
    </div>
  </footer>